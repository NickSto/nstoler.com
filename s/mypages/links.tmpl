<body>

  <div id="container">
    <header>
        <TMPL_VAR NAVBAR>
    </header>
	
    <div id="main" role="main">
		<header>
			<h1 id="title">Links</h1>
		</header>
		
		<section id="links">
			<form name='delete_links' method='post' action='./links_delete.cgi'>
				<ul id="link_list">
				<TMPL_LOOP LINKS>
					<li class="link">
						<input type="checkbox" class="del_cb" name="link_<TMPL_VAR LINK_ID>">
						<h3><TMPL_VAR LINK></h3>
						<p><TMPL_VAR COMMENT></p>
					</li>
				</TMPL_LOOP>
				</ul>
				
				<footer class="del_submit">
					<h4>Delete selected links:</h4>
					<div class="field">
						<label for="auth">Auth:</label>
						<input class="auth" name="auth" type="password" autocomplete="off">
					</div>
					<input type="submit" value="Delete">
				</footer>
			</form>
		</section>
		
		<section id="add_link">
			<h2>Add a Link</h2>
			<form name='add_link' method='post' action='./links_add.cgi' >
				<div class="field">
					<label for="url">URL:</label>
					<input class="url" name="url" type="text">
				</div>
				<div class="field">
					<label for="title">Title:</label>
					<input class="title" name="title" type="text">
				</div>
				<div class="field">
					<label for="comment">Description:</label>
					<textarea name="comment" rows='3' cols='100'></textarea>
				</div>
				<div class="field">
					<label for="auth">Auth:</label>
					<input class="auth" name="auth" type="password" autocomplete="off">
				</div>
				<input type="submit" value="Submit">
			</form>
		</section>
    </div>
	
    <footer>
        <TMPL_VAR NAVBAR>
    </footer>
