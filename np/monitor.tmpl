		<section id="notepad">
			<form name='delete_notes' method='post' action='notepad_delete.cgi'>
				<ul id="note_list">
				<TMPL_IF PAGES>
				<TMPL_LOOP PAGES>
					<li class="note">
						<p><a href="/<TMPL_VAR PAGE>"><TMPL_VAR PAGE></a></p>
					</li>
				</TMPL_LOOP>
				<TMPL_ELSE>
					<li class="note">
						<p>No existing pages right now.</p>
					</li>
				</TMPL_IF>
				</ul>
			</form>
		</section>
		<p><a href="export.cgi">Export</a> all existing notes</p>
